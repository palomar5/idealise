%ul.column.width2.first.users
  - users.each do |user|
    %li.column.width2.first
      .column.unitx1.first
        != image_tag(gravatar_url(current_user), :class => "column unitx1 first avatar")
      .column.unitx3
        %h6
          !=link_to h(user.name), user
          (#{user.rating_points || "0"} Kudos points)
        %p= truncate(user.description, :length => 140)