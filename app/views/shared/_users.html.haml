%ul(class="column first users #{ all ? 'width4 all' : 'width2' }")
  - users.each do |user|
    %li(class="column width2 #{ all ? cycle('first', '') : 'first'}")
      .column.unitx1.first
        != link_to image_tag(gravatar_url(current_user), :class => "column unitx1 first avatar"), user
      .column.unitx3
        %h6
          !=link_to h(user.name), user
          %strong
            (#{pluralize(user.rating_points || "0", 'point', 'points')})
        %p= truncate(user.description, :length => 170)
        %p.column.unitx3.first.tags
          %strong Tags:
          - user.tag_list.each do |tag|
            = tag
